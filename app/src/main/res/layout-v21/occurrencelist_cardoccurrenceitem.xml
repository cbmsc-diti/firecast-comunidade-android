<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:elevation="4dp">


<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/simpleoccurrenceitem__type"
            tools:text="ACIDENTE DE TRÂNSITO"
            android:background="@color/occurrences_0"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:height="48dp"
            android:textSize="16sp"
            android:gravity="center_vertical"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_access_time_black_24dp"
                android:id="@+id/time_image"
                android:layout_marginRight="4dp"
                />

            <TextView
                android:id="@+id/simpleoccurrenceitem__hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Lançado há 10 minutos"
                android:padding="4dp"
                android:layout_toRightOf="@id/time_image"
                android:layout_toEndOf="@id/time_image"
                />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location_on_black_24dp"
                android:id="@+id/loc_image"
                android:layout_marginRight="4dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/loc_image"
                android:layout_toEndOf="@id/loc_image"
                >
                <TextView
                    android:id="@+id/simpleoccurrenceitem__distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Em 1.4 km"
                    android:padding="4dp"

                    />


                <TextView
                    android:id="@+id/simpleoccurrenceitem__location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="JOAO GUALBERTO SOARES, RIO VERMELHO"
                    android:padding="4dp"
                    />

                <TextView
                    android:id="@+id/simpleoccurrenceitem__reference"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="PROXIMO AO CAMPING DA CIDASC"
                    android:padding="4dp"
                    />

                <TextView
                    android:id="@+id/simpleoccurrenceitem__city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Florianópolis"
                    android:padding="4dp"
                    />

            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Navegar"
                style="@style/Widget.AppCompat.Button.Borderless"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalhes"
                style="@style/Widget.AppCompat.Button.Borderless"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            tools:background="@color/occurrences_0"/>


    </LinearLayout>
</android.support.v7.widget.CardView>
</FrameLayout>